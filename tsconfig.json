{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "outDir": "./build",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/use-global-hook",
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
  ],
  "typedocOptions":{
    "out":"./docs",
    "include":"./manual",
    "mdPagesSourcePath": "./manual",
    "hideGenerator":true
  }
}
